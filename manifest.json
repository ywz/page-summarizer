{
  "manifest_version": 3,
  "name": "Page Summarizer",
  "version": "2.0.4",
  "description": "Summarize web pages using OpenAI API",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "contextMenus"
  ],
  "icons": {
    "16": "assets/moka-pot_16.png",
    "48": "assets/moka-pot_64.png",
    "128": "assets/moka-pot_128.png"
  },
  "action": {
    "default_popup": "src/pages/popup.html",
    "default_icon": {
    "16": "assets/moka-pot_16.png",
    "48": "assets/moka-pot_64.png",
    "128": "assets/moka-pot_128.png"
    }
  },
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "options_page": "src/pages/config.html"
}
